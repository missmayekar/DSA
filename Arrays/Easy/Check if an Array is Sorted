public class DemoClass {
        private boolean checkSortedArray(int[] array, int n){
            for (int i = 0; i < n-1; i++)
                if (array[i] > array[i+1])
                    return false;

            return true;
        }

        public static void main(String[] args) {
            int[] array = {1, 2, 4, 7, 7, 5};
            int n = array.length;

            DemoClass object = new DemoClass();
            System.out.println(object.checkSortedArray(array, n));

        }

}
