    private static void starPrinter(int i){
        //printing stars
        for(int j = 0; j < i; j++){
            System.out.print("*");
        }
        //next line
        System.out.println();
    }
    
    public static void main(String[] args) {

        for(int i = 1; i <= 5; i++){
            starPrinter(i);
        }

        for(int i = 4; i >= 1; i--){
            starPrinter(i);
        }
    }
